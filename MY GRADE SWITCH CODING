package mySwitch;

import java.util.Scanner;

public class MyGradeSwitch {

	public static void main(String[] args) {
		
		Scanner scanMe = new Scanner (System.in);
		
		System.out.println("Enter the grade from A, B, C, D, E and F :");
			String str = scanMe.next();
			char grade = str.charAt(0);
			
		switch (grade)
		{
				
			case 'A' :		
					System.out.println("(Grade A >= 90)");
					break ;
					
			case 'B' :	
					System.out.println("Grade B >= 80 and less than 90");
					break ;
					
			case 'C' :
					System.out.println("Grade C >= 70 and less than 80");
					break ;
					
			case 'D' :
					System.out.println("Grade D >= 60 and less than 70");
					break ;
					
			case 'E' :		
					System.out.println("Grade E >= 50 and less than 60");
					break ;
					
			case 'F' :	
					System.out.println("Grade F less than 40");
					break ;
					
			default :	
					System.out.println("Invalid Grade");
		}
		
		scanMe.close();
